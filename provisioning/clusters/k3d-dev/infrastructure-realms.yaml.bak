apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: infrastructure-realms
  namespace: flux-system
spec:
  interval: 1h
  retryInterval: 1m
  timeout: 5m
  dependsOn:
  - name: infrastructure-services
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./provisioning/infrastructure/realms/overlays/k3d-dev
  prune: true
  wait: true
