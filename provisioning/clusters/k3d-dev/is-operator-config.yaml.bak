apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: is-operator-config
  namespace: flux-system
spec:
  interval: 1h
  retryInterval: 1m
  timeout: 5m
  dependsOn:
  - name: is-olm-operators
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./provisioning/infrastructure/operator-config
  prune: true
  wait: true
